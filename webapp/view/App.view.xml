<mvc:View
	controllerName='sap.ui.ui5-practice.Controller.App'
	xmlns="sap.m"
	xmlns:mvc='sap.ui.core.mvc'
	displayBlock="true">
    
  <Shell>
    <App>
      <pages>
        <Page title="{i18n>homePageTitle}">
        <content>
        <Panel headerText="{i18n>helloPanelTitle}">
            <content>
              <Button text="{i18n>showHelloButtonText}" press=".onShowHello" />
              <Input
								value="{oData>/recipient/name}"
								description='Hello {oData>/recipient/name}'
								valueLiveUpdate='true'
								width='60%'
							/>
            </content>
        </Panel>

        <Panel headerText="{i18n>otherPanelTitle}">
          <content>
            <Button text="{i18n>showNewButtonText}" press=".onShowHello2" />
            <Input
								value="{newModel>/object}"
								description='Hello {newModel>/object}'
								valueLiveUpdate='true'
								width='60%'
							/>  
          </content>
        </Panel>
        </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>
