<mvc:View
	controllerName='sap.ui.ui5-practice.Controller.App'
	xmlns="sap.m"
	xmlns:mvc='sap.ui.core.mvc'
	displayBlock="true">
    
  <Shell>
    <App class="myCustomApp">
      <pages>
        <Page title="{i18n>homePageTitle}">
          <content>
            <Panel headerText="{i18n>helloPanelTitle}"
                   class="sapUiResponsiveMargin"
                   width="auto">
              <content>
                <Button 
                text="{i18n>showHelloButtonText}" 
                press=".onShowHello" 
                class="myCustomButton"/>
                <Input
								value="{oData>/recipient/name}"
								description='Hello {oData>/recipient/name}'
								valueLiveUpdate='true'
								width='60%'
						  	/>
                <FormattedText
                  htmlText="Hello{oData>/recipient/name}"
                  class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
              </content>
           </Panel>

           <Panel headerText="{i18n>otherPanelTitle}"
                  class="sapUiResponsiveMargin"
                  width="auto">
              <content>
                <Button 
                  text="{i18n>showNewButtonText}" 
                  press=".onShowHello2"
                  class="sapUiSmallMarginEnd" />
                <Input
								   value="{newModel>/object}"
								   description='Hello {newModel>/object}'
								   valueLiveUpdate='true'
								   width='60%'
						  	/>
                <Text
                  text="Hello {newModel>/object}"
                  class="sapUiSmallMargin" />  
             </content>
           </Panel>
         </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>
