<mvc:View
    controllerName="sap.ui.ui5-practice.controller.OtherLists"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <List
        id="productList"
        headerText="{i18n>productListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path: 'product>/Products',
            sorter: {
                path: 'ProductType',
                group: true
            }
        }"
        >
        <headerToolbar>
            <Toolbar>
              <Title text ="{i18n>productListTitle}" />
              <ToolbarSpacer />
              <SearchField 
                width="50%" 
                search =".onFilterProducts" 
                liveChange= ".onLiveFilterOther"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{product>Quantity} x {product>ProductName}" 
                number="{
                    parts: [{path: 'product>ExtendedPrice'},
                            {path: 'product>Currency'}],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{= ${product>Currency} !== ' ' ? ${product>Currency} : ${localDefault>/currency}}"
                numberState="{= ${product>ExtendedPrice} > 50 ? 'Success' : 'Error'}">

                <firstStatus>
                  <ObjectStatus
                    text="{
                        path: 'product>Status',
                        formatter: '.formatter.statusText'
                    }" />
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>