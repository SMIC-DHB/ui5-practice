<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        state="Error"
        id="helloDialog"
        title="Hello {oData>/recipient/name}">
        <content>
          <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin" />
        </content>
        <Text
          text="{i18n>error}"
          class="sapUiSmallMargin" /> 
        <beginButton>
            <Button
               text= "{i18n>dialogCloseButtonText}"
               press= ".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>